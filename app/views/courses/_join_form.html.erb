<%= form_with(model: student, url: "", local: true) do |f| %>
  <% if student.errors.any? %>
    <ul>
      <% student.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :name, "Your name" %>
    <%= f.text_field :name, placeholder: "John Doe" %>
  </p>

  <p>
    <%= f.label :email, "Your email address" %>
    <%= f.email_field :email, placeholder: "johndoe@example.com" %>
  </p>

  <%= f.submit "Join group" %>
<% end %>
